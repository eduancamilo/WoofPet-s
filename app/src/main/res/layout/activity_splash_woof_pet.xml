<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_WoofPet"
    android:paddingTop="@dimen/llTopPadding"
    android:paddingLeft="@dimen/llLetfPadding"
    android:paddingRight="@dimen/llRightPadding"
    android:background="@color/primary_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ivHeightLayout"
        android:src="@drawable/pyg"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="@dimen/ivBottomMargin"/>

    <TextView
        android:id="@+id/tvTextOnePet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="@string/tvWelcome"
        android:textColor="@color/light_primary_color"
        android:textSize="@dimen/tvSizeSubTitle" />

    <TextView
        android:id="@+id/tvTitlePet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/tvMarginButtonTitle"
        android:fontFamily="@font/fredoka"
        android:text="@string/tvTitleApp"
        android:textColor="@color/light_primary_color"
        android:textSize="@dimen/tvSizeTitle" />

    <TextView
        android:id="@+id/tvDescriptionPet"
        android:layout_width="@dimen/tvWidthLayout"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto"
        android:text="@string/tvDescriptionApp"
        android:textAlignment="center"
        android:textColor="@color/light_primary_color"
        android:textSize="@dimen/tvSizeDescription"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>