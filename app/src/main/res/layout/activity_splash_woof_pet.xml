<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_WoofPet"
    android:paddingTop="100dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/primary_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/pyg"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/tvTextOnePet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="Bienvenidos a"
        android:textColor="@color/light_primary_color"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvTitlePet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/fredoka"
        android:text="WoofPet's"
        android:textColor="@color/light_primary_color"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/tvParagraphPet"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto"
        android:text="Tu App para el Control de Vacunación y Desparasitación de tu mejor amigo"
        android:textAlignment="center"
        android:textColor="@color/light_primary_color"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>